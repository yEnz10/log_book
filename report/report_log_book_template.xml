<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_log_book">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="header">
                    <div class="row" style="font-family: 'Trebuchet MS', sans-serif;">
                        <div class="col-2"/>
                        <div class="col-8">
                            <p class="text-center mt-2"><b>ใบรับฝากรวม</b></p>
                            <p class="text-center">ศป./ศฝ./ปณ..........สาขา..........</p>
                            <p class="text-center">ได้รับฝากไปรษณีย์ ประเภท </p>
                        </div>
                        <div class="col-2">
                            <p class="text-right py-0 my-0">ปณ??</p>
                            <div class="text-center">
                                <img class="rounded rounded-circle border border-dark py-0 my-0" 
                                    t-if="not o.image"
                                    height="100" border="1" width="100"/>
                                <img class="rounded rounded-circle border border-dark" 
                                    t-if="o.image" 
                                    t-att-src="'data:image/png;base64,%s' % to_text(o.image)" 
                                    height="100" border="1" width="100" />
                            </div>
                            <p class="text-center">ตราประจำ</p>
                        </div>
                    </div>
                </div>
                <t t-call="web.basic_layout">
                    <div class="page">
                        <t t-if="o.receiver_line_ids">
                            <div class="row">
                                
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th name="th_reference" class="text-left">
                                                <span>Reference</span>
                                            </th>
                                            <th name="th_age" class="text-left">
                                                <span>Age</span>
                                            </th>
                                            <th name="th_doctor" class="text-left">
                                                <span>Doctor</span>
                                            </th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>