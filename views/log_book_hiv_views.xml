<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="log_book_hiv_action" model="ir.actions.act_window"> <!-- Model ~ -->
        <field name="name">การติดตามผู้บริจาคโลหิตเฉพาะส่วนและ HIV repeat reactive (2) ที่พบปัญหาผลการตรวจผิดปกติ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">log.book.hiv</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'default_type': '1'}</field> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new log book hiv!
            </p>
        </field>
    </record>

    <record id="log_book_hiv_informer_action" model="ir.actions.act_window"> <!-- Model ~ -->
        <field name="name">ผู้แจ้ง</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">log.book.hiv.informer</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'default_type': '1'}</field> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new log book hiv!
            </p>
        </field>
    </record>

    <record id="log_book_hiv_tree" model="ir.ui.view"> <!-- Tree HIV repeat reactive (2) ที่พบปัญหา -->
        <field name="name">log.book.hiv.tree</field>
        <field name="model">log.book.hiv</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" />
                <field name="unit_number" />
                <field name="test_res_problem" />
                <field name="call_number" />
                <field name="contactable" />
                <field name="uncontactable" />
                <field name="call_datetime" />
                <field name="next_time" />
                <field name="informer" />
                <field name="note" />
            </tree>
        </field>
    </record>

    <record id="log_book_hiv_informer_tree" model="ir.ui.view"> <!-- Tree HIV repeat reactive (2) ที่พบปัญหา -->
        <field name="name">log.book.hiv.informer.tree</field>
        <field name="model">log.book.hiv.informer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="fullname" />
            </tree>
        </field>
    </record>
</odoo>

